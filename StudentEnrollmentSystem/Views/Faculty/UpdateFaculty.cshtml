@model Faculty

<h3 align="center"> Update Faculty</h3>
<a asp-controller="Faculty" asp-action="ViewAllFaculty" class="card-link">Back to list</a>
<div id="form">
<form method="post" asp-action="UpdateFaculty" asp-controller="Faculty">
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="ID"></label>
        <input class="form-control" asp-for="ID" readonly disabled />
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="Email">Email Address</label>
        <input type="email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="DeptID">Department</label>
            @Html.DropDownListFor(x => x.DeptID, new SelectList(ViewBag.Departments, "ID", "Name"), "Select Value", new {@class = "form-control"})
        <span asp-validation-for="DeptID" class="text-danger"></span>
    </div>
    <br />
        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Update</button>
</form>
</div>
