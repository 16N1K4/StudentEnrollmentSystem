@model Section

<h3 align="center"> Update Section</h3>
<a asp-controller="Section" asp-action="ViewAllSections" class="btn btn-info"><i class="bi bi-box-arrow-left"></i>Back to list</a>
<div id="form">
    <form method="post" asp-action="UpdateSection" asp-controller="Section">
        <div class="form-group col-md-12">
            <label class="form-label" asp-for="ID">ID</label>
            <input class="form-control" asp-for="ID" readonly disabled />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label class="form-label" asp-for="SectionCode">Section Code</label>
            <input class="form-control" asp-for="SectionCode" readonly disabled />
            <span asp-validation-for="SectionCode" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label class="form-label" asp-for="Day">Day</label>
            @Html.DropDownListFor(x => x.Day, new SelectList(ViewBag.Days, "Value", "Text"), "Select Value", new {@class = "form-control show-tick", @data_live_search = "true"})
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label class="form-label" asp-for="StartTime">Start Time</label>
            @Html.DropDownListFor(x => x.StartTime, new SelectList(ViewBag.Times, "Value", "Text"), "Select Value", new {@class = "form-control show-tick", @data_live_search = "true"})
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label class="form-label" asp-for="EndTime">End Time</label>
            @Html.DropDownListFor(x => x.EndTime, new SelectList(ViewBag.Times, "Value", "Text"), "Select Value", new {@class = "form-control show-tick", @data_live_search = "true"})
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
        <br />
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirm"><i class="bi bi-pencil-square"></i> Update</button>

        <div class="modal fade" id="confirm" tabindex="-1" aria-labelledby="confirmLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmLabel">Confirm Update</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to change this entry?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Yes, update</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
