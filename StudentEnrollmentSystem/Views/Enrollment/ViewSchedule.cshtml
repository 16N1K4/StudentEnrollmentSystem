@model List<StudentSubject>


<h3 align="center">Semester Schedule</h3>

@if (TempData["SuccessA"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["SuccessA"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
@if (TempData["SuccessB"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["SuccessB"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<table class="table table-striped table-info" id="data">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Course</th>
            <th scope="col">Section</th>
            <th scope="col">Schedule</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Sub in Model)
        {
            <tr>
                <th scope="row">@Sub.Subject.ID</th>
                <td>@Sub.Subject.Name</td>
                <td>@Sub.Subject.Course.Name</td>
                <td>@Sub.Subject.Section.SectionCode</td>
                <td>@Sub.Subject.Section.FullSchedule</td>
                <td><a class="btn btn-primary" asp-controller="Enrollment" asp-action="ViewOneSubject" asp-route-id="@Sub.Subject.ID"><i class="bi bi-eye"></i> View</a></td>
                <td><a class="btn btn-danger" asp-controller="Enrollment" asp-action="DropSubject" asp-route-studentID="@ViewBag.StudentID" asp-route-subjectID="@Sub.Subject.ID"><i class="bi bi-trash"></i> Drop Class</a></td>
            </tr>
        }
    </tbody>
</table>
