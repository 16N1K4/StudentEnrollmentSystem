@model Subject

<h3 align ="center">Subject Details</h3>
<a class="btn btn-info" asp-controller="Enrollment" asp-action="ViewAllSubjects" class="btn btn-info"><i class="bi bi-box-arrow-left"></i> Back to list</a>
<br />
@{
    #region Schedule Generator
    string code = Model.Section.SectionCode;
    string day = "";
    string startTime = "";
    string endTime = "";

    switch (code[0])
    {
        case 'M':
            day = "Monday";
            break;
        case 'T':
            day = "Tuesday";
            break;
        case 'W':
            day = "Wednesday";
            break;
        case 'H':
            day = "Thursday";
            break;
        case 'F':
            day = "Friday";
            break;
        case 'S':
            day = "Saturday";
            break;
    }

    switch (code[1])
    {
        case 'A':
            startTime = "07:00 AM";
            break;
        case 'B':
            startTime = "08:30 AM";
            break;
        case 'C':
            startTime = "10:00 AM";
            break;
        case 'D':
            startTime = "11:30 AM";
            break;
        case 'E':
            startTime = "1:00 PM";
            break;
        case 'F':
            startTime = "2:30 PM";
            break;
        case 'G':
            startTime = "4:00 PM";
            break;
        case 'H':
            startTime = "5:30 PM";
            break;
        case 'I':
            startTime = "7:00 PM";
            break;
        case 'J':
            startTime = "8:30 PM";
            break;
    }

    switch (code[2])
    {
        case 'A':
            endTime = "07:00 AM";
            break;
        case 'B':
            endTime = "08:30 AM";
            break;
        case 'C':
            endTime = "10:00 AM";
            break;
        case 'D':
            endTime = "11:30 AM";
            break;
        case 'E':
            endTime = "1:00 PM";
            break;
        case 'F':
            endTime = "2:30 PM";
            break;
        case 'G':
            endTime = "4:00 PM";
            break;
        case 'H':
            endTime = "5:30 PM";
            break;
        case 'I':
            endTime = "7:00 PM";
            break;
        case 'J':
            endTime = "8:30 PM";
            break;
    }
    #endregion
}

<table class="table table-striped table-info">
    <tbody>
        <tr>
            <th scope="col">ID</th>
            <td>@Model.ID</td>

        </tr>
        <tr>
            <th scope="col">Name</th>
            <td>@Model.Name</td>

        </tr>
        <tr>
            <th scope="col">Units</th>
            <td>@Model.Units</td>
        </tr>
        <tr>
            <th scope="col">Class Size</th>
            <td>@Model.ClassSize</td>
        </tr>
        <tr>
            <th scope="col">Instructor</th>
            <td>@Model.Faculty.FirstName @Model.Faculty.LastName</td>
        </tr>
        <tr>
            <th scope="col">Course</th>
            <td>@Model.Course.Name</td>
        </tr>
        <tr>
            <th scope="col">Section</th>
            <td>@Model.Section.SectionCode</td>
        </tr>
        <tr>
            <th scope="col">Schedule</th>
            <td>@day, @startTime - @endTime</td>
        </tr>
    </tbody>
</table>