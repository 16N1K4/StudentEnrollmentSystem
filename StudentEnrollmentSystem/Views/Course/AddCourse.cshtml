@model Course

<h3 align="center"> Create Course</h3>

<form method="post" asp-action="AddCourse" asp-controller="Course">

    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <label class="form-label" asp-for="DeptID">Department</label>
    @Html.DropDownListFor(x => x.DeptID, new SelectList(ViewBag.Departments, "ID", "Name"), new {@class = "form-control"})
    <span asp-validation-for="DeptID" class="text-danger"></span>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
