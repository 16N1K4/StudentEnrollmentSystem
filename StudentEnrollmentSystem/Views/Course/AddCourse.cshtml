@model Course

<h3 align="center"> Create Course</h3>
<a asp-controller="Course" asp-action="ViewAllCourses" class="btn btn-info"><i class="bi bi-box-arrow-left"></i>Back to list</a>
<div id="form">
<form method="post" asp-action="AddCourse" asp-controller="Course">

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="DeptID">Department</label>
            @Html.DropDownListFor(x => x.DeptID, new SelectList(ViewBag.Departments, "ID", "Name"), "Select Value", new {@class = "form-control show-tick", @data_live_search = "true"})
        <span asp-validation-for="DeptID" class="text-danger"></span>
    </div>
    <br />
        <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Submit</button>
</form>
</div>
