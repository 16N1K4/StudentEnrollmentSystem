@model Course

<h3 align ="center">Course Details</h3>
<a class="btn btn-info" asp-controller="Course" asp-action="ViewAllCourses" class="btn btn-info"><i class="bi bi-box-arrow-left"></i> Back to list</a>
<br />
<table class="table table-striped table-info">
    <tbody>
        <tr>
            <th scope="col">ID</th>
            <td>@Model.ID</td>

        </tr>
        <tr>
            <th scope="col">Name</th>
            <td>@Model.Name</td>

        </tr>
        <tr>
            <th scope="col">Department</th>
            <td>@Model.Department.Name</td>
        </tr>
    </tbody>
</table>