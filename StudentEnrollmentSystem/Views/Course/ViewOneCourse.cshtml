@model Course

<a asp-controller="Course" asp-action="ViewAllCourses" class="card-link">Back to list</a>
<h3 align ="center">Course Details</h3>

<table class="table table-striped table-info">
    <tbody>
        <tr>
            <th scope="col">ID</th>
            <td>@Model.ID</td>

        </tr>
        <tr>
            <th scope="col">Name</th>
            <td>@Model.Name</td>

        </tr>
        <tr>
            <th scope="col">Department</th>
            <td>@Model.Department.Name</td>
        </tr>
    </tbody>
</table>