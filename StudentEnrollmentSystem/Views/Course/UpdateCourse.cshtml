@model Course

<h3 align="center"> Update Course</h3>
<a asp-controller="Course" asp-action="ViewAllCourses" class="card-link">Back to list</a>
<div id="form">
<form method="post" asp-action="UpdateCourse" asp-controller="Course">

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="ID"></label>
        <input class="form-control" asp-for="ID" readonly disabled />
    </div>
    <div class ="form-group col-md-12">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="DeptID">Department</label>
            @Html.DropDownListFor(x => x.DeptID, new SelectList(ViewBag.Departments, "ID", "Name"), "Select Value", new {@class = "form-control"})
        <span asp-validation-for="DeptID" class="text-danger"></span>
    </div>
    <br />

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirm"><i class="bi bi-pencil-square"></i> Update</button>


        <div class="modal fade" id="confirm" tabindex="-1" aria-labelledby="confirmLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmLabel">Confirm Update</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to change this entry?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Yes, update</button>
                    </div>
                </div>
            </div>
        </div>
</form>
</div>