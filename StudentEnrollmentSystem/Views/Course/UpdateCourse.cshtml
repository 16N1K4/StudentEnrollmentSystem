@model Course

<h3 align="center"> Update Course</h3>
<a asp-controller="Course" asp-action="ViewAllCourses" class="card-link">Back to list</a>
<div id="form">
<form method="post" asp-action="UpdateCourse" asp-controller="Course">

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="ID"></label>
        <input class="form-control" asp-for="ID" readonly disabled />
    </div>
    <div class ="form-group col-md-12">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="DeptID">Department</label>
        @Html.DropDownListFor(x => x.DeptID, new SelectList(ViewBag.Departments, "ID", "Name"), new {@class = "form-control"})
        <span asp-validation-for="DeptID" class="text-danger"></span>
    </div>
    <br />
        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Update</button>
</form>
</div>