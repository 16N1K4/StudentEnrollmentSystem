@using StudentEnrollmentSystem.ViewModels
@model RegisterViewModel

<h3 align = "center">Create New Student User</h3>
<a asp-controller="Account" asp-action="ViewAllStudents" class="btn btn-info"><i class="bi bi-box-arrow-left"></i>Back to list</a>
<div id="form">
<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group col-md-12">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Email">Email Address (will serve as username)</label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="CourseID">Course</label>
            @Html.DropDownListFor(x => x.CourseID, new SelectList(ViewBag.Courses, "ID", "Name"), "Select Value", new {@class = "form-control show-tick", @data_live_search = "true"})
        <span asp-validation-for="CourseID" class="text-danger"></span>
    </div>

    <br />
        <button class="btn btn-primary" type="submit"><i class="bi bi-plus-circle"></i> Register</button>
</form>
</div>
