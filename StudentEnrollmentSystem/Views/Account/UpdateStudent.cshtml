@using StudentEnrollmentSystem.ViewModels
@model RegisterViewModel

<h3 align="center">Update Student Details</h3>
<a asp-controller="Account" asp-action="ViewAllStudents" class="card-link">Back to list</a>
<div id="form">
    <form asp-controller="Account" asp-action="UpdateStudent" method="post">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group col-md-12">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Email">Email Address</label>
            <input class="form-control" asp-for="Email" readonly />
        </div>
        <div class="form-group col-md-12">
            <label class="form-label" asp-for="CourseID">Course</label>
            @Html.DropDownListFor(x => x.CourseID, new SelectList(ViewBag.Courses, "ID", "Name"), new {@class = "form-control"})
            <span asp-validation-for="CourseID" class="text-danger"></span>
        </div>

        <br />
        <button class="btn btn-primary" type="submit"><i class="bi bi-pencil-square"></i> Update</button>
    </form>
</div>
