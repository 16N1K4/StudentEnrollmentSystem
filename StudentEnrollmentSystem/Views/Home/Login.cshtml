@using StudentEnrollmentSystem.ViewModels
@model LoginViewModel

<h3 align = "center">Log In</h3>

<div id="form">
<form asp-controller="Home" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>
        <div class ="form-group col-md-12">
            <label class="form-label" asp-for="UserName">Email Address</label>
            <input class= "form-control" asp-for="UserName" />
        </div>

        <div class="form-group col-md-12">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <br />
        <button class="btn btn-primary" type="submit"> <i class="bi bi-box-arrow-right"></i> Login</button>
</form>
</div>
