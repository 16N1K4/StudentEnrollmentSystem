@model Subject

<h3 align="center"> Update Subject</h3>
<a asp-controller="Subject" asp-action="ViewAllSubjects" class="card-link">Back to list</a>
<div id="form">
<form method="post" asp-action="UpdateSubject" asp-controller="Subject">
    <div class ="form-group col-md-12">
        <label class="form-label" asp-for="ID"></label>
        <input class="form-control" asp-for="ID" readonly disabled />
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="Units"></label>
        <input type="number" class="form-control" asp-for="Units" />
        <span asp-validation-for="Units" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label class="form-label" asp-for="ClassSize"></label>
        <input type="number" class="form-control" asp-for="ClassSize" />
        <span asp-validation-for="ClassSize" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="FacultyID">Instructor</label>
            @Html.DropDownListFor(x => x.FacultyID, new SelectList(ViewBag.Faculty, "ID", "FullName"), "Select Value", new {@class = "form-control"})
        <span asp-validation-for="FacultyID" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="CourseID">Course</label>
            @Html.DropDownListFor(x => x.CourseID, new SelectList(ViewBag.Courses, "ID", "Name"), "Select Value" new {@class = "form-control"})
        <span asp-validation-for="CourseID" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label class="form-label" asp-for="SectionID">Section</label>
            @Html.DropDownListFor(x => x.SectionID, new SelectList(ViewBag.Sections, "ID", "SectionCode"), "Select Value", new {@class = "form-control"})
        <span asp-validation-for="SectionID" class="text-danger"></span>
    </div>
    <br />
        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Update</button>
</form>
</div>
