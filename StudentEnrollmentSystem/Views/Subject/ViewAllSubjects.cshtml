@model List<Subject>


<h3 align="center">Subjects List</h3>

@if (TempData["SuccessA"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["SuccessA"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
@if (TempData["SuccessB"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["SuccessB"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
@if (TempData["SuccessC"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["SuccessC"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<a class="btn btn-success" asp-action="AddSubject" asp-controller="Subject"><i class="bi bi-plus-circle"></i> Add Subject</a>
<br />
<table class="table table-striped table-info" id="data">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Course</th>
            <th scope="col">Section</th>
            <th scope="col">Schedule</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Sub in Model)
        {
            <tr>
                <th scope="row">@Sub.ID</th>
                <td>@Sub.Name</td>
                <td>@Sub.Course.Name</td>
                <td>@Sub.Section.SectionCode</td>
                <td>@Sub.Section.FullSchedule</td>
                <td><a class="btn btn-primary" asp-controller="Subject" asp-action="ViewOneSubject" asp-route-id="@Sub.ID"><i class="bi bi-eye"></i> View</a></td>
                <td><a class="btn btn-warning" asp-controller="Subject" asp-action="UpdateSubject" asp-route-id="@Sub.ID"><i class="bi bi-pencil-square"></i> Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Subject" asp-action="DeleteSubject" asp-route-id="@Sub.ID"><i class="bi bi-trash"></i> Delete</a></td>
            </tr>
        }
    </tbody>
</table>
